<div data-hook="checkout_form_wrapper">
  <%= form_for order, :url => update_checkout_path(state), :html => { :id => "checkout_form_#{state}" } do |form| %>
    <% unless Spree::Auth::Config[:registration_step] or order.email? or current_user %>
      <p class="field" style='clear: both'>
        <%= form.label :email %><br />
        <%= form.text_field :email %>
      </p>
    <% end %>

    <%= render "spree/checkout/#{state}", :form => form %>
  <% end %>
</div>
